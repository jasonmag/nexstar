<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 px-4 py-12">
  <div class="max-w-md w-full bg-white dark:bg-gray-800 shadow-lg rounded-2xl p-8 space-y-8 border-t-8 border-yellow-400 dark:border-teal-400">
    <div class="text-center">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Sign in to your account</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if flash[:alert] %>
        <div class="bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-200 p-2 rounded text-sm">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="space-y-5">
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm p-2 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-yellow-400 focus:border-yellow-400 dark:focus:ring-teal-400 dark:focus:border-teal-400 sm:text-sm transition" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm p-2 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-yellow-400 focus:border-yellow-400 dark:focus:ring-teal-400 dark:focus:border-teal-400 sm:text-sm transition" %>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-yellow-500 dark:text-teal-400 border-gray-300 dark:border-gray-600 rounded focus:ring-yellow-400 dark:focus:ring-teal-400" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900 dark:text-gray-200" %>
          </div>
          <div class="text-sm">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-yellow-600 dark:text-teal-400 hover:underline" %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign in", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-bold text-white bg-yellow-400 dark:bg-teal-400 hover:bg-yellow-500 dark:hover:bg-teal-500 transition" %>
        </div>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-500 dark:text-gray-400">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
