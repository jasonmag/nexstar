<% content_for :title, "About" %>

<!-- Hero -->
<header class="relative flex items-center justify-center text-center overflow-hidden"
        style="background-image: url('<%= asset_path("about-bg.png") %>');">
  <div class="absolute inset-0 bg-[#0a0d14]/60"></div>
  <div class="relative z-10 py-32 md:py-40 px-4">
    <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">
      <%= @profile&.hero_title.presence || "About Me" %>
    </h1>
    <p class="text-lg md:text-xl text-gray-200">
      <%= @profile&.hero_subtitle.presence || "My journey as a technologist" %>
    </p>
  </div>
</header>

<section class="py-16 bg-white dark:bg-gray-900 dark:text-gray-100">
  <div class="max-w-5xl mx-auto px-6 space-y-12">

    <!-- Top: photo + intro -->
    <div class="flex flex-col md:flex-row md:items-center gap-8">
      <div class="md:shrink-0">
        <%= render "shared/profile_image",
          img_class: "w-40 h-40 rounded-full border-4 border-yellow-400 dark:border-teal-400 shadow-lg object-cover object-center" %>
      </div>

      <div class="flex-1">
        <h2 class="text-4xl font-bold mb-2"><%= @profile&.name %></h2>

        <p class="text-indigo-600 dark:text-indigo-400 font-semibold mb-4">
          <%= @profile&.role %>
        </p>

        <p class="text-gray-700 dark:text-gray-300">
          <%= @profile&.intro %>
        </p>
      </div>
    </div>

    <!-- Who I Am -->
    <div>
      <h3 class="text-2xl font-semibold mb-4">Who I Am</h3>
      <div class="space-y-4 text-gray-700 dark:text-gray-300">
        <% @profile&.who_i_am.to_s.split(/\n{2,}/).each do |paragraph| %>
          <p><%= paragraph.strip %></p>
        <% end %>
      </div>
    </div>

    <!-- Stats / Focus Areas (static boxes) -->
    <div class="grid sm:grid-cols-3 gap-4">
      <div class="rounded-xl bg-gray-50 dark:bg-gray-800 p-4 text-center shadow">
        <div class="text-lg font-extrabold text-gray-900 dark:text-gray-100">Enterprise & Startup</div>
        <div class="text-sm text-gray-600 dark:text-gray-300">Rails • Vue/React • APIs</div>
      </div>
      <div class="rounded-xl bg-gray-50 dark:bg-gray-800 p-4 text-center shadow">
        <div class="text-lg font-extrabold text-gray-900 dark:text-gray-100">Data Platforms</div>
        <div class="text-sm text-gray-600 dark:text-gray-300">Azure • Databricks • Fabric</div>
      </div>
      <div class="rounded-xl bg-gray-50 dark:bg-gray-800 p-4 text-center shadow">
        <div class="text-lg font-extrabold text-gray-900 dark:text-gray-100">DevOps</div>
        <div class="text-sm text-gray-600 dark:text-gray-300">Bicep/Terraform • CI/CD • Docker</div>
      </div>
    </div>

    <!-- What I Do + Highlights -->
    <div class="grid md:grid-cols-2 gap-10">
      
      <!-- What I Do -->
      <div>
        <h3 class="text-2xl font-semibold mb-3">What I Do</h3>

        <% if @profile&.what_i_do.to_s.include?("-") %>
          <ul class="list-disc pl-5 text-gray-700 dark:text-gray-300 space-y-2">
            <% @profile&.what_i_do.to_s.split("\n").each do |line| %>
              <% next if line.strip.blank? %>
              <li><%= line.gsub(/^-+\s*/, "") %></li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-700 dark:text-gray-300">
            <%= @profile&.what_i_do %>
          </p>
        <% end %>
      </div>

      <!-- Recent Highlights -->
      <div>
        <h3 class="text-2xl font-semibold mb-3">Recent Highlights</h3>
        <ul class="space-y-3 text-gray-700 dark:text-gray-300">
          <% (@profile&.highlights_list || []).each do |h| %>
            <li class="flex">
              <span class="mt-1 mr-2 h-2 w-2 rounded-full bg-yellow-400 dark:bg-teal-400"></span>
              <%= h %>
            </li>
          <% end %>
        </ul>
      </div>

    </div>

    <!-- Toolbox -->
    <div>
      <h3 class="text-2xl font-semibold mb-3">Toolbox</h3>
      <div class="flex flex-wrap gap-2">
        <% (@profile&.toolbox_list || []).each do |tool| %>
          <span class="bg-indigo-100 dark:bg-indigo-800 text-indigo-700 dark:text-indigo-300 rounded px-3 py-1 text-sm">
            <%= tool %>
          </span>
        <% end %>
      </div>
    </div>

    <!-- Contact / Links -->
    <div class="text-center">
      <h3 class="text-2xl font-semibold mb-4">Let’s Connect</h3>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
        <% if @profile&.email.present? %>
          <%= mail_to @profile.email, "Email Me",
            class: "inline-block bg-yellow-400 dark:bg-teal-400 text-slate-900 dark:text-gray-900 font-bold px-6 py-3 rounded-xl shadow hover:bg-yellow-500 dark:hover:bg-teal-500 transition" %>
        <% end %>

        <% profile = Profile.first %>

        <% github_url   = safe_profile_url(profile&.github_url,   %w[github.com]) %>
        <% linkedin_url = safe_profile_url(profile&.linkedin_url, %w[linkedin.com]) %>

        <% if github_url.present? %>
          <%= link_to "GitHub",
                      github_url,
                      target: "_blank",
                      rel: "noopener noreferrer",
                      class: "text-gray-700 dark:text-gray-300 hover:text-yellow-600 dark:hover:text-teal-400 underline" %>
        <% end %>

        <% if linkedin_url.present? %>
          <%= link_to "LinkedIn",
                      linkedin_url,
                      target: "_blank",
                      rel: "noopener noreferrer",
                      class: "text-gray-700 dark:text-gray-300 hover:text-yellow-600 dark:hover:text-teal-400 underline" %>
        <% end %>
      </div>

      <p class="mt-6 text-gray-600 dark:text-gray-400 italic">
        <%= @profile&.availability_message.presence || "Available for remote contracts, consulting, or your next big idea." %>
      </p>
    </div>

  </div>
</section>
