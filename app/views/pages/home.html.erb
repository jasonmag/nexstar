<% content_for :title, "Home" %>

<!-- Hero Section -->
<%= render "shared/hero" %>

<!-- Articles Feed Section -->
<section class="py-16 bg-gray-50 dark:bg-gray-800 dark:text-gray-100">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold mb-8 text-center">Latest Articles</h2>
    <div class="space-y-6">
      <% @articles.limit(5).each do |article| %>
        <div class="flex items-start space-x-4 p-4 rounded-lg 
                    bg-white/30 dark:bg-gray-700/30 
                    backdrop-blur-sm 
                    transition hover:bg-white/40 dark:hover:bg-gray-700/40">
          
          <div class="flex-shrink-0 w-24 h-16 bg-gray-200/50 dark:bg-gray-600/50 overflow-hidden rounded">
            <% if article.cover.attached? %>
              <%= image_tag article.cover.variant(resize: "96x64^"), class: "w-full h-full object-cover" %>
            <% else %>
              <%= image_tag "https://placehold.co/96x64/ccc/777?text=No+Image", class: "w-full h-full object-cover" %>
            <% end %>
          </div>

          <div class="flex-1">
            <p class="text-xs uppercase text-indigo-600 dark:text-indigo-400 mb-1">
              <%= article.published_at&.strftime("%b %d, %Y") %>
            </p>
            <h3 class="text-lg font-semibold mb-1">
              <%= link_to article.title, article_path(article),
                            class: "hover:text-indigo-500 dark:hover:text-indigo-300" %>
            </h3>
            <p class="text-gray-700 dark:text-gray-300 text-sm">
              <%= truncate(strip_tags(article.content), length: 120) %>
            </p>
          </div>

        </div>
      <% end %>
    </div>
    <div class="mt-8 text-center">
      <%= link_to "Read All Articles", articles_path,
          class: "text-indigo-600 dark:text-indigo-400 hover:underline" %>
    </div>
  </div>
</section>

<!-- Projects Section -->
<section class="py-16 bg-white dark:bg-gray-900 dark:text-gray-100">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Highlighted Projects</h2>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      <% @projects.limit(3).each do |project| %>
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow hover:shadow-lg transition flex flex-col">
          <% if project.thumbnail.attached? %>
            <%= image_tag project.thumbnail.variant(resize: "400x250^"),
                class: "w-full h-48 object-cover rounded-t-lg" %>
          <% else %>
            <%= image_tag "https://placehold.co/400x250", class: "w-full h-48 object-cover rounded-t-lg" %>
          <% end %>
          <div class="p-6 flex-1 flex flex-col">
            <h3 class="text-xl font-semibold mb-2">
              <%= link_to project.name, project_path(project), class: "hover:text-indigo-400" %>
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              <%= truncate(strip_tags(project.description), length: 100) %>
            </p>
            <p class="mt-auto text-indigo-400 text-sm"><%= link_to "View Project →", project_path(project) %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-8 text-center">
      <%= link_to "More Projects", projects_path, class: "text-indigo-600 dark:text-indigo-400 hover:underline" %>
    </div>
  </div>
</section>

<!-- About CTA -->
<section class="py-16 bg-gray-50 dark:bg-gray-800 dark:text-gray-100">
  <div class="max-w-4xl mx-auto px-6 text-center">
    <h2 class="text-3xl font-bold mb-6">About Me</h2>
    <p class="text-lg text-gray-700 dark:text-gray-300 mb-8">
      I’m Jason—a developer passionate about building clean and impactful web experiences with Rails and Tailwind.
    </p>
    <%= link_to "Learn More", about_path,
        class: "inline-block bg-indigo-600 text-white px-6 py-3 rounded hover:bg-indigo-700" %>
  </div>
</section>

<!-- Final Contact CTA -->
<section class="py-12 bg-indigo-700 dark:bg-indigo-600 text-white">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h3 class="text-xl font-semibold mb-4">Ready to collaborate or get in touch?</h3>
    <%= link_to "Contact Me", contact_path,
        class: "bg-white text-indigo-700 px-6 py-3 rounded hover:bg-gray-100 font-medium" %>
  </div>
</section>
