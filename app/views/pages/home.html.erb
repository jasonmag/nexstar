<% content_for :title, "Welcome" %>

<section class="relative h-screen flex items-center justify-center bg-indigo-700 text-white px-4">
  <div class="text-center space-y-4 max-w-xl">
    <h1 class="text-5xl md:text-6xl font-extrabold leading-tight">
      Hey, I’m Jason.<br/>
      I write stories, & build stuff.
    </h1>
    <p class="text-xl md:text-2xl text-indigo-100">
      A software engineer, storyteller, and maker based in Cebu City.
    </p>
    <%= link_to "See my work", projects_path, class: "inline-block bg-white text-indigo-700 font-semibold px-6 py-3 rounded hover:bg-indigo-100" %>
  </div>
</section>

<section class="py-16 bg-white">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-8">Featured Articles</h2>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      <% @articles.limit(3).each do |article| %>
        <article class="border rounded-lg overflow-hidden hover:shadow-lg">
          <% if article.cover.attached? %>
            <%= image_tag article.cover.variant(resize: "400x250^"), class: "w-full h-48 object-cover" %>
          <% else %>
            <%= image_tag "placeholder.jpg", class: "w-full h-48 object-cover" %>
          <% end %>
          <div class="p-6">
            <p class="text-sm text-indigo-600 mb-2"><%= article.published_at&.strftime("%b %d, %Y") %></p>
            <h3 class="font-bold text-lg mb-2"><%= link_to article.title, article_path(article), class: "hover:text-indigo-500" %></h3>
            <p class="text-gray-600 text-sm"><%= truncate(strip_tags(article.content), length: 120) %></p>
          </div>
        </article>
      <% end %>
    </div>
    <div class="mt-8">
      <%= link_to "View all articles →", articles_path, class: "text-indigo-600 hover:underline text-lg" %>
    </div>
  </div>
</section>

<section class="py-16 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-8">Recent Projects</h2>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      <% @projects.limit(3).each do |project| %>
        <div class="border rounded-lg overflow-hidden hover:shadow-lg flex flex-col">
          <% if project.thumbnail.attached? %>
            <%= image_tag project.thumbnail.variant(resize: "400x250^"), class: "w-full h-48 object-cover" %>
          <% else %>
            <%= image_tag "placeholder.jpg", class: "w-full h-48 object-cover" %>
          <% end %>
          <div class="p-6 flex-1 flex flex-col">
            <h3 class="font-bold text-lg mb-2"><%= link_to project.name, project_path(project), class: "hover:text-indigo-500" %></h3>
            <p class="text-gray-600 text-sm mb-4"><%= truncate(strip_tags(project.description), length: 100) %></p>
            <%= link_to "Read more →", project_path(project), class: "mt-auto text-indigo-600 hover:underline text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-8">
      <%= link_to "View all projects →", projects_path, class: "text-indigo-600 hover:underline text-lg" %>
    </div>
  </div>
</section>

<section class="py-16 bg-white">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-4">About Me</h2>
    <p class="text-lg text-gray-700 mb-6">
      I’m Jason, a full-stack Rails developer and creative at heart. I publish articles, build projects, and occasionally share templates like this.
    </p>
    <%= mail_to "hello@jasonmag.com", "Contact me →", class: "text-indigo-600 hover:underline font-semibold" %>
  </div>
</section>
