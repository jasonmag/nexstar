<% content_for :title, "Projects" %>

<section class="py-16 bg-white dark:bg-gray-900 dark:text-gray-100">
  <div class="max-w-6xl mx-auto px-6">
    <h1 class="text-4xl font-bold text-center mb-12">Projects</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @projects.order(released_on: :desc).each do |project| %>
        <div class="flex flex-col bg-white dark:bg-gray-700 rounded-lg shadow-sm border border-slate-200 dark:border-gray-600 overflow-hidden transition hover:shadow-md">
          <div class="h-48 overflow-hidden">
            <% if project.thumbnail.attached? %>
              <%= image_tag project.thumbnail.variant(resize: "600x360^"), class: "w-full h-full object-cover" %>
            <% else %>
              <%= image_tag "https://placehold.co/400x240", class: "w-full h-full object-cover" %>
            <% end %>
          </div>
          <div class="p-6 flex-1 flex flex-col">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
              <%= link_to project.name, project_path(project), class: "hover:text-indigo-500 dark:hover:text-indigo-400" %>
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm mb-4"><%= truncate(strip_tags(project.description), length: 100) %></p>
            <dl class="mt-auto text-sm text-gray-800 dark:text-gray-200 space-y-1">
              <dt class="font-semibold">Released:</dt>
              <dd><%= project.released_on.strftime("%b %d, %Y") %></dd>
            </dl>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
