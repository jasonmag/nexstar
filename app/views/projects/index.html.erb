<% content_for :title, "Projects" %>

<section class="py-16 bg-gray-50">
  <div class="max-w-5xl mx-auto px-4">
    <h1 class="text-4xl font-bold mb-8">Projects</h1>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @projects.each do |project| %>
        <div class="border rounded-lg overflow-hidden hover:shadow-lg flex flex-col">
          <% if project.thumbnail.attached? %>
            <%= image_tag project.thumbnail.variant(resize: "400x250^"), class: "w-full h-48 object-cover" %>
          <% end %>
          <div class="p-6 flex-1 flex flex-col">
            <h2 class="font-bold text-xl mb-2"><%= link_to project.name, project_path(project), class: "hover:text-indigo-500" %></h2>
            <p class="text-gray-600 text-sm mb-4">
              <%= truncate(strip_tags(project.description), length: 120) %>
            </p>
            <p class="text-xs text-gray-500 mb-4"><%= project.tech_stack %></p>
            <%= link_to "View Project â†’", project_path(project), class: "mt-auto text-indigo-600 hover:underline text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
