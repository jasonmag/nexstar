<% content_for :title, @project.name %>

<section class="py-16 bg-white dark:bg-gray-900 dark:text-gray-100">
  <div class="max-w-3xl mx-auto px-6">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border-t-8 border-yellow-400 dark:border-teal-400 px-8 py-10 space-y-8">
      <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-gray-100"><%= @project.name %></h1>
      <% if @project.thumbnail.attached? %>
        <%= image_tag @project.thumbnail.variant(resize: "800x400^"),
            class: "w-full h-auto object-cover rounded-lg shadow-md border-4 border-yellow-200 dark:border-teal-700" %>
      <% end %>
      <p class="text-lg text-gray-700 dark:text-gray-300">
        <%= @project.description %>
      </p>
      <dl class="text-base text-gray-800 dark:text-gray-200 space-y-2">
        <dt class="font-semibold">Tech Stack</dt>
        <dd>
          <% @project.tech_stack.split(',').each do |tech| %>
            <span class="inline-block bg-indigo-100 dark:bg-indigo-800 text-indigo-700 dark:text-indigo-300 rounded px-3 py-1 text-xs font-semibold mr-2 mb-2">
              <%= tech.strip %>
            </span>
          <% end %>
        </dd>
        <% if @project.url.present? %>
          <dt class="font-semibold">Live URL</dt>
          <dd>
            <%= link_to @project.url, @project.url,
                        target: "_blank", rel: :noopener,
                        class: "text-yellow-600 dark:text-teal-400 hover:underline font-semibold" %>
          </dd>
        <% end %>
        <% if @project.github_url.present? %>
          <dt class="font-semibold">Code</dt>
          <dd>
            <%= link_to @project.github_url, @project.github_url,
                        target: "_blank", rel: :noopener,
                        class: "text-indigo-600 dark:text-indigo-400 hover:underline font-semibold" %>
          </dd>
        <% end %>
      </dl>
      <div class="pt-6">
        <%= link_to "← Back to Projects", projects_path,
            class: "text-indigo-600 dark:text-indigo-400 hover:underline font-semibold" %>
      </div>
    </div>
  </div>
</section>
