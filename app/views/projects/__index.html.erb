<% content_for :title, "Projects" %>

<section class="py-16 bg-white dark:bg-gray-900 dark:text-gray-100">
  <div class="max-w-6xl mx-auto px-6">
    <h1 class="text-4xl font-bold text-center mb-12">Projects</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @projects.order(released_on: :desc).each do |project| %>
        <div class="flex flex-col bg-white dark:bg-gray-700 rounded-xl shadow-sm border-2 border-slate-200 dark:border-gray-700 overflow-hidden transition hover:shadow-lg hover:scale-105 hover:z-10 duration-200">
          <!-- Accent Bar -->
          <div class="h-2 bg-yellow-400 dark:bg-teal-400"></div>
          <!-- Project Image, clickable -->
          <div class="h-48 overflow-hidden flex items-center justify-center bg-gray-100 dark:bg-gray-800">
            <%= link_to project_path(project) do %>
              <% if project.thumbnail.attached? %>
                <%= image_tag project.thumbnail.variant(resize: "600x360^"), class: "w-full h-full object-cover", alt: project.name %>
              <% else %>
                <%= image_tag "https://placehold.co/400x240?text=Project", class: "w-full h-full object-cover", alt: project.name %>
              <% end %>
            <% end %>
          </div>
          <!-- Project Content -->
          <div class="p-6 flex-1 flex flex-col">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
              <%= link_to project.name, project_path(project), class: "hover:text-indigo-500 dark:hover:text-indigo-400 transition" %>
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
              <%= truncate(strip_tags(project.description), length: 100) %>
            </p>
            <dl class="mt-auto text-sm text-gray-800 dark:text-gray-200 space-y-1">
              <dt class="font-semibold">Released:</dt>
              <dd><%= project.released_on.strftime("%b %d, %Y") %></dd>
            </dl>
            <!-- Tech Stack Badges -->
            <% if project.tech_stack.present? %>
              <div class="flex flex-wrap gap-2 mt-4">
                <% project.tech_stack.split(',').each do |tech| %>
                  <span class="bg-indigo-100 dark:bg-indigo-800 text-indigo-700 dark:text-indigo-300 rounded px-2 py-1 text-xs font-semibold">
                    <%= tech.strip %>
                  </span>
                <% end %>
              </div>
            <% end %>
            <!-- Links -->
            <div class="flex gap-4 mt-4">
              <% if project.github_url.present? %>
                <%= link_to "GitHub", project.github_url, target: "_blank", rel: :noopener, class: "text-indigo-600 dark:text-indigo-400 font-semibold hover:underline" %>
              <% end %>
              <% if project.url.present? %>
                <%= link_to "Visit", project.url, target: "_blank", rel: :noopener, class: "text-yellow-600 dark:text-teal-400 font-semibold hover:underline" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-16">
      <h2 class="text-2xl font-semibold mb-4">Want to build something together?</h2>
      <%= link_to "Contact Me", contact_path, class: "inline-block bg-yellow-400 dark:bg-teal-400 text-slate-900 font-bold px-8 py-3 rounded-xl shadow-lg hover:bg-yellow-500 dark:hover:bg-teal-500 hover:text-white transition" %>
    </div>
  </div>
</section>
