<% content_for :title, "Articles" %>

<section class="py-16 bg-white dark:bg-gray-900 dark:text-gray-100">
  <div class="max-w-6xl mx-auto px-6 space-y-8">
    <h1 class="text-4xl font-bold text-center mb-6">Articles</h1>
    <div class="space-y-6">
      <% @articles.order(published_at: :desc).each do |article| %>
        <div class="flex items-start space-x-4 p-4 rounded-lg bg-white dark:bg-gray-700 border-l-4 border-yellow-400 dark:border-teal-400 transition hover:shadow-md hover:bg-gray-50 dark:hover:bg-gray-600 group">
          <div class="flex-shrink-0 w-24 h-16 bg-gray-200 dark:bg-gray-600 overflow-hidden rounded">
            <%= link_to article_path(article) do %>
              <% if article.cover.attached? %>
                <%= image_tag article.cover.variant(resize: "96x64^"), class: "w-full h-full object-cover" %>
              <% else %>
                <%= image_tag "https://placehold.co/96x64/ccc/777?text=No+Image", class: "w-full h-full object-cover" %>
              <% end %>
            <% end %>
          </div>
          <div class="flex-1">
            <span class="inline-block mb-1 px-2 py-0.5 rounded-full text-xs font-semibold bg-indigo-100 dark:bg-indigo-800 text-indigo-700 dark:text-indigo-300">
              <%= article.published_at&.strftime("%b %d, %Y") %>
            </span>
            <h3 class="text-lg font-semibold mb-1">
              <%= link_to article.title, article_path(article),
                          class: "hover:text-yellow-500 dark:hover:text-teal-400 transition-colors" %>
            </h3>
            <p class="text-gray-700 dark:text-gray-300 text-sm">
              <%= truncate(strip_tags(article.content), length: 140) %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
