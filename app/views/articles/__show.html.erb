<% content_for :title, @article.title %>

<section class="py-16 bg-white dark:bg-gray-900 dark:text-gray-100">
  <div class="max-w-3xl mx-auto px-6">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border-t-8 border-yellow-400 dark:border-teal-400 px-8 py-10 space-y-8">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-2"><%= @article.title %></h1>
      <p class="text-sm font-semibold text-yellow-600 dark:text-teal-400 mb-2">
        <%= @article.published_at&.strftime("%B %d, %Y") %>
      </p>
      <% if @article.cover.attached? %>
        <%= image_tag @article.cover.variant(resize: "800x400^"),
            class: "w-full h-auto object-cover rounded-lg shadow-md border-4 border-yellow-100 dark:border-teal-700" %>
      <% end %>
      <div class="prose dark:prose-invert max-w-none">
        <%= simple_format(@article.content) %>
      </div>
      <div class="pt-6">
        <%= link_to "â† Back to Articles", articles_path,
            class: "text-indigo-600 dark:text-indigo-400 hover:underline font-semibold" %>
      </div>
    </div>
  </div>
</section>
