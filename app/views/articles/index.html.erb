<% content_for :title, "Articles" %>

<section class="py-16 bg-gray-50">
  <div class="max-w-5xl mx-auto px-4">
    <h1 class="text-4xl font-bold mb-8">Articles</h1>
    <div class="space-y-12">
      <% @articles.each do |article| %>
        <article class="flex flex-col md:flex-row md:items-center">
          <% if article.cover.attached? %>
            <%= image_tag article.cover.variant(resize: "300x200^"), class: "w-full md:w-48 md:h-40 object-cover rounded-lg mb-4 md:mr-6" %>
          <% end %>
          <div class="flex-1">
            <p class="text-indigo-600 text-sm mb-2"><%= article.published_at&.strftime("%b %d, %Y") %></p>
            <h2 class="text-2xl font-semibold mb-2"><%= link_to article.title, article_path(article), class: "hover:text-indigo-500" %></h2>
            <p class="text-gray-600"><%= truncate(strip_tags(article.content), length: 150) %></p>
          </div>
        </article>
      <% end %>
    </div>
  </div>
</section>
