<% content_for :title, "Articles" %>

<!-- Hero Section -->
<header class="relative flex items-center justify-center text-center overflow-hidden"
        style="background-image: url('<%= asset_path("hero-bg.png") %>');
               background-size: cover;
               background-position: center;
               background-repeat: no-repeat;">
  <div class="absolute inset-0 bg-[#0a0d14]/60"></div>
  <div class="relative z-10 py-32 md:py-40 px-4">
    <h1 class="text-4xl md:text-6xl font-bold mb-4">Articles</h1>
    <p class="text-lg md:text-xl text-gray-300">Thoughts, tutorials & insights</p>
  </div>
</header>

<!-- Articles Listing -->
<section class="py-16 px-6 max-w-screen-xl mx-auto">
  <h2 class="text-3xl font-semibold mb-8">Latest Posts</h2>

  <% if @articles.present? %>
    <div class="grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      <%= render partial: "articles/article", collection: @articles, as: :article %>
    </div>

    <%# Optional pagination (Kaminari/WillPaginate) %>
    <% if defined?(paginate) %>
      <div class="mt-10">
        <%= paginate @articles %>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-400">No published articles yet. Check back soon.</p>
  <% end %>
</section>
