<% content_for :title, "Articles" %>

<!-- Hero Section -->
<header class="relative flex items-center justify-center text-center overflow-hidden" style="background-image: url('<%= asset_path("hero-bg.png") %>');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;">
    <div class="absolute inset-0 bg-[#0a0d14]/60"></div>
    <div class="relative z-10 py-32 md:py-40 px-4">
        <h1 class="text-4xl md:text-6xl font-bold mb-4">Articles</h1>
        <p class="text-lg md:text-xl text-gray-300">Thoughts, tutorials & insights</p>
    </div>
</header>

<!-- Projects Listing -->
<section class="py-16 px-6 max-w-screen-xl mx-auto">
    <h2 class="text-3xl font-semibold mb-8">Latest Posts</h2>
    <div class="grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Card 1 -->
        <a href="article-web-performance.html" class="bg-gray-800 rounded-lg shadow-lg overflow-hidden flex flex-col transition-transform transform hover:-translate-y-1">
            <%= image_tag "hero-bg.png", alt: "Article image", class: "h-40 w-full object-cover" %>
            <div class="p-6 flex-1 flex flex-col">
            <h3 class="text-xl font-semibold mb-2">Improving Web Performance</h3>
            <p class="text-gray-400 flex-1 mb-4">Learn techniques to speed up your web applications and enhance user experience.</p>
            </div>
        </a>
        <!-- Card 2 -->
        <a href="article-ml-workflows.html" class="bg-gray-800 rounded-lg shadow-lg overflow-hidden flex flex-col transition-transform transform hover:-translate-y-1">
            <%= image_tag "about-bg.png", alt: "Article image", class: "h-40 w-full object-cover" %>
            <div class="p-6 flex-1 flex flex-col">
            <h3 class="text-xl font-semibold mb-2">Optimising Machine Learning Workflows</h3>
            <p class="text-gray-400 flex-1 mb-4">Discover strategies to streamline your data pipelines and accelerate model development.</p>
            </div>
        </a>
        <!-- Card 3 -->
        <a href="article-devops-landscape.html" class="bg-gray-800 rounded-lg shadow-lg overflow-hidden flex flex-col transition-transform transform hover:-translate-y-1">
            <%= image_tag "projects-bg.png", alt: "Article image", class: "h-40 w-full object-cover" %>
            <div class="p-6 flex-1 flex flex-col">
            <h3 class="text-xl font-semibold mb-2">Navigating the DevOps Landscape</h3>
            <p class="text-gray-400 flex-1 mb-4">Explore the essential practices and tools that underpin modern DevOps.</p>
            </div>
        </a>
    </div>
</section>