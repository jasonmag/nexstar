<%# Page <title> %>
<% content_for :title, @article.title %>

<%# Hero image: cover (if attached) -> fallback asset %>
<%
  hero_image =
    if @article.cover&.attached?
      url_for(@article.cover)
    else
      asset_path("hero-bg.png")
    end
%>

<!-- Hero -->
<header
  class="relative flex items-center justify-center text-center overflow-hidden"
  style="background-image: url('<%= hero_image %>'); background-size: cover; background-position: center; background-repeat: no-repeat;">
  <div class="absolute inset-0 bg-[#0a0d14]/60"></div>
  <div class="relative z-10 py-32 md:py-40 px-4">
    <h1 class="text-4xl md:text-6xl font-bold mb-4"><%= @article.title %></h1>
    <% if @article.published_at.present? %>
      <p class="text-lg md:text-xl text-gray-300">
        Published <%= l(@article.published_at, format: :long) %>
      </p>
    <% else %>
      <p class="text-lg md:text-xl text-gray-300">Draft</p>
    <% end %>
  </div>
</header>

<!-- Content -->
<section class="py-16 px-6 max-w-screen-md mx-auto">
  <h2 class="text-3xl font-semibold mb-4">Overview</h2>

  <div class="text-gray-300">
    <%= simple_format(@article.content.to_s) %>
  </div>

  <%= link_to "Back to Articles",
              articles_path,
              class: "inline-block mt-10 px-6 py-3 bg-indigo-600 hover:bg-indigo-500 text-white rounded-lg" %>
</section>
