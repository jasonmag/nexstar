<%= form_with model: [:admin, project], class: "space-y-6" do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, class: "mt-1 block w-full border rounded px-3 py-2", rows: 5 %>
  </div>

  <div>
    <%= f.label :tech_stack, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :tech_stack, class: "mt-1 block w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :url, class: "block text-sm font-medium text-gray-700" %>
    <%= f.url_field :url, class: "mt-1 block w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :github_url, class: "block text-sm font-medium text-gray-700" %>
    <%= f.url_field :github_url, class: "mt-1 block w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :released_on, class: "block text-sm font-medium text-gray-700" %>
    <%= f.date_select :released_on, class: "mt-1 block w-full border rounded" %>
  </div>

  <div>
    <%= f.submit "Save Project", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
  </div>
<% end %>
