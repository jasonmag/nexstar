<%= form_with model: [:admin, project], class: "space-y-6" do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-1" %>
    <%= f.text_field :name, class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-yellow-400 focus:border-yellow-400 dark:focus:ring-teal-400 dark:focus:border-teal-400 transition" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-1" %>
    <%= f.text_area :description, rows: 5, class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-yellow-400 focus:border-yellow-400 dark:focus:ring-teal-400 dark:focus:border-teal-400 transition" %>
  </div>

  <div>
    <%= f.label :tech_stack, class: "block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-1" %>
    <%= f.text_field :tech_stack, class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-yellow-400 focus:border-yellow-400 dark:focus:ring-teal-400 dark:focus:border-teal-400 transition" %>
    <span class="text-xs text-gray-500 dark:text-gray-400">Comma-separated, e.g. Ruby on Rails, TailwindCSS</span>
  </div>

  <div>
    <%= f.label :url, class: "block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-1" %>
    <%= f.url_field :url, class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-yellow-400 focus:border-yellow-400 dark:focus:ring-teal-400 dark:focus:border-teal-400 transition" %>
  </div>

  <div>
    <%= f.label :github_url, class: "block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-1" %>
    <%= f.url_field :github_url, class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-yellow-400 focus:border-yellow-400 dark:focus:ring-teal-400 dark:focus:border-teal-400 transition" %>
  </div>

  <div>
    <%= f.label :released_on, class: "block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-1" %>
    <%= f.date_select :released_on, class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-yellow-400 focus:border-yellow-400 dark:focus:ring-teal-400 dark:focus:border-teal-400 transition" %>
  </div>

  <div>
    <%= f.submit "Save Project", class: "w-full bg-yellow-400 dark:bg-teal-400 text-slate-900 dark:text-gray-900 font-bold px-4 py-2 rounded-lg shadow hover:bg-yellow-500 dark:hover:bg-teal-500 transition" %>
  </div>
<% end %>
