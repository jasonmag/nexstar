<% content_for :title, "Projects" %>

<div class="flex justify-between items-center mb-4">
  <h1 class="text-xl font-bold">Projects</h1>
  <%= link_to "New Project", new_admin_project_path, class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
</div>

<table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
  <thead class="bg-gray-100 text-left text-sm uppercase text-gray-600">
    <tr>
      <th class="px-4 py-2">Name</th>
      <th class="px-4 py-2">Tech Stack</th>
      <th class="px-4 py-2">Released</th>
      <th class="px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody class="text-sm text-gray-700">
    <% @projects.each do |project| %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= project.name %></td>
        <td class="px-4 py-2"><%= project.tech_stack %></td>
        <td class="px-4 py-2"><%= project.released_on&.strftime("%b %d, %Y") || "-" %></td>
        <td class="px-4 py-2 space-x-2">
          <%= link_to "Edit", edit_admin_project_path(project), class: "text-indigo-600 hover:underline" %>
          <%= link_to "Delete", admin_project_path(project), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
