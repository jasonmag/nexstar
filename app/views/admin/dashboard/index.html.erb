<% content_for :title, "Dashboard" %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border-t-4 border-yellow-400 dark:border-teal-400 p-6 transition hover:shadow-xl">
    <h2 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-2">Articles</h2>
    <p class="text-3xl font-bold text-gray-900 dark:text-gray-100"><%= Article.count %></p>
  </div>
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border-t-4 border-yellow-400 dark:border-teal-400 p-6 transition hover:shadow-xl">
    <h2 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-2">Projects</h2>
    <p class="text-3xl font-bold text-gray-900 dark:text-gray-100"><%= Project.count %></p>
  </div>
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border-t-4 border-yellow-400 dark:border-teal-400 p-6 transition hover:shadow-xl">
    <h2 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-2">Users</h2>
    <p class="text-3xl font-bold text-gray-900 dark:text-gray-100"><%= User.count %></p>
  </div>
</div>
