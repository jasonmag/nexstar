<% content_for :title, "Articles" %>

<div class="flex justify-between items-center mb-4">
  <h1 class="text-xl font-bold">Articles</h1>
  <%= link_to "New Article", new_admin_article_path, class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
</div>

<table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
  <thead class="bg-gray-100 text-left text-sm uppercase text-gray-600">
    <tr>
      <th class="px-4 py-2">Title</th>
      <th class="px-4 py-2">Published At</th>
      <th class="px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody class="text-sm text-gray-700">
    <% @articles.each do |article| %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= article.title %></td>
        <td class="px-4 py-2"><%= article.published_at&.strftime("%b %d, %Y") || "-" %></td>
        <td class="px-4 py-2 space-x-2">
          <%= link_to "Edit", edit_admin_article_path(article), class: "text-indigo-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
