<% content_for :title, "Articles" %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Articles</h1>
  <%= link_to "New Article", new_admin_article_path,
      class: "bg-yellow-400 dark:bg-teal-400 text-slate-900 dark:text-gray-900 font-bold px-4 py-2 rounded-lg shadow hover:bg-yellow-500 dark:hover:bg-teal-500 transition" %>
</div>

<div class="overflow-x-auto rounded-2xl shadow-lg bg-white dark:bg-gray-800">
  <table class="min-w-full">
    <thead>
      <tr class="bg-gray-100 dark:bg-gray-700 text-left text-xs uppercase text-gray-700 dark:text-gray-200 tracking-wider">
        <th class="px-6 py-3">Title</th>
        <th class="px-6 py-3">Published At</th>
        <th class="px-6 py-3">Actions</th>
      </tr>
    </thead>
    <tbody class="text-sm text-gray-900 dark:text-gray-100 divide-y divide-gray-200 dark:divide-gray-700">
      <% @articles.each do |article| %>
        <tr class="hover:bg-yellow-50 dark:hover:bg-teal-900 transition">
          <td class="px-6 py-4"><%= article.title %></td>
          <td class="px-6 py-4"><%= article.published_at&.strftime("%b %d, %Y") || "-" %></td>
          <td class="px-6 py-4 space-x-2">
            <%= link_to "Edit", edit_admin_article_path(article),
                class: "text-yellow-600 dark:text-teal-400 font-semibold hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
