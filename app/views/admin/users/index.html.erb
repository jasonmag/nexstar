<% content_for :title, "Users" %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">Users</h1>
  <%= link_to "New User", new_admin_user_path, class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
</div>

<table class="min-w-full bg-white shadow rounded-lg">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-4 py-2 text-left">Email</th>
      <th class="px-4 py-2 text-left">Admin?</th>
      <th class="px-4 py-2 text-left">Created At</th>
      <th class="px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="px-4 py-2"><%= user.email %></td>
        <td class="px-4 py-2"><%= user.admin? ? "Yes" : "No" %></td>
        <td class="px-4 py-2"><%= user.created_at.strftime("%b %d, %Y") %></td>
        <td class="px-4 py-2 space-x-2">
          <%= link_to "Show", admin_user_path(user), class: "text-indigo-600 hover:underline" %>
          <%= link_to "Edit", edit_admin_user_path(user), class: "text-yellow-600 hover:underline" %>
          <% unless user == current_user %>
            <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
