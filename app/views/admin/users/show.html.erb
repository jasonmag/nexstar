<% content_for :title, "User: #{@user.email}" %>

<h1 class="text-2xl font-bold mb-6">User Details</h1>
<div class="bg-white shadow rounded-lg p-6 space-y-4">
  <div>
    <span class="font-semibold">Email:</span>
    <span><%= @user.email %></span>
  </div>
  <div>
    <span class="font-semibold">Admin:</span>
    <span><%= @user.admin? ? "Yes" : "No" %></span>
  </div>
  <div>
    <span class="font-semibold">Created at:</span>
    <span><%= @user.created_at.strftime("%b %d, %Y") %></span>
  </div>
  <div>
    <span class="font-semibold">Updated at:</span>
    <span><%= @user.updated_at.strftime("%b %d, %Y") %></span>
  </div>
</div>
<div class="mt-6 flex space-x-2">
  <%= link_to "Edit", edit_admin_user_path(@user), class: "bg-yellow-600 text-white px-4 py-2 rounded hover:bg-yellow-700" %>
  <%= link_to "Back", admin_users_path, class: "bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300" %>
</div>
