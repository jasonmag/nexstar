<% content_for :title, "User: #{@user.email}" %>

<div class="bg-white dark:bg-gray-800 shadow-lg rounded-2xl p-8 max-w-xl mx-auto">
  <h1 class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100">User Details</h1>
  <div class="space-y-4">
    <div>
      <span class="font-semibold text-gray-700 dark:text-gray-200">Email:</span>
      <span class="ml-2"><%= @user.email %></span>
    </div>
    <div>
      <span class="font-semibold text-gray-700 dark:text-gray-200">Admin:</span>
      <% if @user.admin? %>
        <span class="ml-2 inline-block px-2 py-1 rounded bg-yellow-400 dark:bg-teal-400 text-slate-900 dark:text-gray-900 font-bold text-xs">Yes</span>
      <% else %>
        <span class="ml-2 inline-block px-2 py-1 rounded bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 text-xs">No</span>
      <% end %>
    </div>
    <div>
      <span class="font-semibold text-gray-700 dark:text-gray-200">Created at:</span>
      <span class="ml-2"><%= @user.created_at.strftime("%b %d, %Y") %></span>
    </div>
    <div>
      <span class="font-semibold text-gray-700 dark:text-gray-200">Updated at:</span>
      <span class="ml-2"><%= @user.updated_at.strftime("%b %d, %Y") %></span>
    </div>
  </div>
  <div class="mt-8 flex space-x-3">
    <%= link_to "Edit", edit_admin_user_path(@user),
          class: "bg-yellow-400 dark:bg-teal-400 text-slate-900 dark:text-gray-900 font-bold px-4 py-2 rounded-lg shadow hover:bg-yellow-500 dark:hover:bg-teal-500 transition" %>
    <%= link_to "Back", admin_users_path,
          class: "bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 font-semibold px-4 py-2 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition" %>
  </div>
</div>
