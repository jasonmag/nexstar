<%# locals: projects:, title: "Featured Projects" %>
<% section_title = local_assigns.fetch(:title, "Featured Projects") %>

<section class="py-16 px-6 max-w-screen-xl mx-auto">
  <h2 class="text-3xl font-semibold mb-8"><%= section_title %></h2>

  <% if projects.present? %>
    <div class="grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      <%= render partial: "projects/project", collection: projects, as: :project %>
    </div>
  <% else %>
    <p class="text-gray-400">No projects yet. Check back soon.</p>
  <% end %>

  <div class="mt-8">
    <%= link_to "View all projects",
                projects_path,
                class: "inline-block px-6 py-3 bg-indigo-600 hover:bg-indigo-500 text-white rounded-lg" %>
  </div>
</section>
