<aside class="w-64 bg-white dark:bg-gray-900 border-r border-gray-200 dark:border-gray-800 shadow-sm p-6 hidden md:block min-h-screen">
  <h2 class="text-xl font-bold mb-8 text-gray-900 dark:text-gray-100">Admin Panel</h2>
  <nav class="space-y-2">
    <%= link_to "Dashboard", admin_root_path,
      class: "block px-3 py-2 rounded font-semibold hover:bg-yellow-100 hover:text-yellow-800 dark:hover:bg-teal-900 dark:hover:text-teal-300 transition" %>

    <%= link_to "Articles", admin_articles_path,
      class: "block px-3 py-2 rounded font-semibold hover:bg-yellow-100 hover:text-yellow-800 dark:hover:bg-teal-900 dark:hover:text-teal-300 transition" %>

    <%= link_to "Projects", admin_projects_path,
      class: "block px-3 py-2 rounded font-semibold hover:bg-yellow-100 hover:text-yellow-800 dark:hover:bg-teal-900 dark:hover:text-teal-300 transition" %>

    <%= link_to "Users", admin_users_path,
      class: "block px-3 py-2 rounded font-semibold hover:bg-yellow-100 hover:text-yellow-800 dark:hover:bg-teal-900 dark:hover:text-teal-300 transition" %>

    <%= link_to "Profile / About Page", edit_admin_profile_path,
      class: "block px-3 py-2 rounded font-semibold hover:bg-yellow-100 hover:text-yellow-800 dark:hover:bg-teal-900 dark:hover:text-teal-300 transition" %>

    <%= link_to "Back to Site", root_path,
      class: "block px-3 py-2 rounded text-sm text-gray-500 dark:text-gray-400 hover:underline mt-8" %>
  </nav>
</aside>
